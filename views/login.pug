
doctype html
html
    head
        title="login"
        link(rel="stylesheet" href="/stylesheets/style_login.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    body
        //img(id="bg" src="/../images/fondo1.jpg" alt="font")
        img(id="bg" src="/../images/ventanita.jpg" alt="font")
        div(class="login")
            article
                img(src="/images/login.png")
                header
                    h1 Iniciar Sesion
                div(class="block")
                    form(action="/login" method="POST")
                        input(type="text" name="username" placeholder="User" required, autofocus)
                        input(type="password" name="password" placeholder="Password" required )
                        if(message && message.length > 0)
                            p(class="alert alert-danger") #{message}
                        button(type="submit" )  Iniciar Sesion
                    a(href='/r') pito


